<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".SelectPath">



    <ImageView
        android:id="@+id/logo"
        android:layout_width="395dp"
        android:layout_height="655dp"
        android:layout_marginTop="-175dp"
        android:layout_marginBottom="-200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnencryption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:width="250dp"
        android:height="60dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Encryption" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btndecryption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnencryption"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:width="250dp"
        android:height="60dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Decryption" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btndecryption"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:width="250dp"
        android:height="60dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/cardview_dark_background"
        android:text="Logout" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogout"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:width="150dp"
        android:height="35dp"
        app:cornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#b3b7bd"
        android:text="About" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_contact_support_24"
        android:layout_marginLeft="323dp"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>