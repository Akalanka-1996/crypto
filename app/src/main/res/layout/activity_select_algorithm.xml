<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".SelectAlgorithm">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:padding="-1000dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Select you algorithm:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnblowfish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:width="400dp"
        android:height="50dp"
        android:backgroundTint="@color/white"
        android:text="Blowfish"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnaes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnblowfish"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:width="400dp"
        android:height="50dp"
        android:backgroundTint="@color/white"
        android:text="AES"
        android:textColor="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btndes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnaes"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:width="400dp"
        android:height="50dp"
        android:backgroundTint="@color/white"
        android:text="DES"
        android:textColor="@color/black" />


</RelativeLayout>